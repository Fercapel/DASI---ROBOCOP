//Primera regla que se ejecutara. Solo se debe disparar una vez.
rule "Acciones Iniciales Policia "
 when
	not ( exists(Focus()))
 then
	TareaSincrona tarea = gestorTareas.crearTareaSincrona(InicializarPolicia.class);
	tarea.ejecutar( );   
	System.out.println( "\n"+agentId +"EJECUTO LA REGLA Acciones Iniciales\n\n" ); 
    recursoTrazas.aceptaNuevaTrazaEjecReglas(agentId," :REGLA " + drools.getRule().getName());
end

rule "Acciones Iniciales Objetivo Policia"
 when
	focoActual : Focus(foco == null)
	not ( exists(Objetivo()))
 then
	Objetivo ob = new RecibirSaludos();
    insert(ob);
    recursoTrazas.aceptaNuevaTrazaEjecReglas(agentId," EJECUTO LA REGLA: " + drools.getRule().getName());
end

rule "Regla de focalizacion de recibir saludos"
 when
    obj:RecibirSaludos(state==Objetivo.PENDING)
    f:Focus(foco == null)
 then
    f.setFoco(obj);
    recursoTrazas.aceptaNuevaTrazaEjecReglas(agentId," EJECUTO LA REGLA: " + drools.getRule().getName());
    update(f);
end

rule "Regla de resolucion de recibir saludos"
 when
    obj:RecibirSaludos(state==Objetivo.PENDING)
    f:Focus(foco==obj)
    
    //exists(InfoEquipo(inicioContactoConEquipo == true))
    miEquipo: InfoEquipo(inicioContactoConEquipo == true)
 then
 
 	
    obj.setState(Objetivo.SOLVING);
    update(obj);
    //TareaSincrona tarea = gestorTareas.crearTareaSincrona(MandarMensajeConfirmacion.class);
 	//tarea.ejecutar(miEquipo, "Recibido: equipo formado");
 	
 	TareaSincrona tarea = gestorTareas.crearTareaSincrona(DecirHola.class);
 	tarea.ejecutar("Recibido: EQUIPO FORMADO", miEquipo);
 	
 	obj.setState(Objetivo.REFINED);
    update(obj);
    recursoTrazas.aceptaNuevaTrazaEjecReglas(agentId," EJECUTO LA REGLA: " + drools.getRule().getName());
    recursoTrazas.aceptaNuevaTrazaEjecReglas(agentId," ESTADO ACTUAL: " + f.getFoco());
    
    Objetivo ob2 = new IrLugarDelRobo();
    insert(ob2);
end

rule "Regla de finalizacion de recibir saludos"
 when
    obj:RecibirSaludos(state==Objetivo.REFINED) // SOLVED
    f:Focus(foco==obj)
    obj2:IrLugarDelRobo(state==Objetivo.PENDING)
 then
 	f.setFoco(obj2);
    recursoTrazas.aceptaNuevaTrazaEjecReglas(agentId," EJECUTO LA REGLA: " + drools.getRule().getName());
    recursoTrazas.aceptaNuevaTrazaEjecReglas(agentId,"Nuevo Foco : " + f.getFoco());
    retract(obj);
    update(f);
end


// SEGUNDA ACCION

rule "Regla de resolucion de recibir coordenadas"
 when
    obj:IrLugarDelRobo(state==Objetivo.PENDING)
    f:Focus(foco==obj) 
    coordenada:Coordenada(idAgente == agentId)
 then
	System.out.println("--------- Regla de recibir coordenada --- " + agentId);
    //obj.setState(Objetivo.SOLVING);
    update(obj);
    TareaSincrona tarea = gestorTareas.crearTareaSincrona(RecibirCoordenadasLugarRobo.class);
 	tarea.ejecutar(coordenada);  
 	
 	// obj.setState(Objetivo.REFINED);
    update(obj);
    recursoTrazas.aceptaNuevaTrazaEjecReglas(agentId," EJECUTO LA REGLA: " + drools.getRule().getName());
    recursoTrazas.aceptaNuevaTrazaEjecReglas(agentId," ESTADO ACTUAL: " + f.getFoco());
end

rule "Regla de finalizacion de recibir coordenadas"
 when
    obj:IrLugarDelRobo(state==Objetivo.REFINED)
    f:Focus(foco==obj)
 then
 	//System.out.println("--------- Hello 4");
 	f.setFoco(null);
    recursoTrazas.aceptaNuevaTrazaEjecReglas(agentId," EJECUTO LA REGLA: " + drools.getRule().getName());
    recursoTrazas.aceptaNuevaTrazaEjecReglas(agentId,"Nuevo Foco : " + f.getFoco());
    retract(obj);
    update(f);
end

